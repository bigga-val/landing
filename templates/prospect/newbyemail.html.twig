{% extends 'base.html.twig' %}

{% block title %}Nouveau Prospect{% endblock %}

{% block body %}
    <style>
        :root {
            --primary-color: #008080;
            --secondary-color: #333;
        }

        .main-content {
            min-height: calc(100vh - 60px);
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        .hero-section {
            background-color: var(--primary-color);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .prospect-form-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .form-title {
            text-align: center;
            color: var(--secondary-color);
            margin-bottom: 30px;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 5px;
            color: var(--secondary-color);
            font-size: 14px;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
        }

        .submit-btn {
            width: 100%;
            padding: 12px;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .submit-btn:hover {
            background-color: #006666;
        }

        .modal-content {
            background-color: #2c2c2c;
            color: #ffffff;
            border: none;
            border-radius: 10px;
        }

        .modal-title {
            font-size: 24px;
            font-weight: bold;
        }

        .modal-body {
            padding: 30px;
        }

        .btn-primary {
            background-color: #ffffff;
            color: #2c2c2c;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #e0e0e0;
            color: #2c2c2c;
        }

        .modal-dialog-centered::before {
            content: '';
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: -1;
        }
    </style>

    <div class="prospect-form-container">
        <h2 class="form-title">M'avertir Par Email :</h2>

        {{ form_start(form, {'attr': {'class': 'prospect-form'}}) }}

        <div class="form-group">
            <label for="{{ form.nom.vars.id }}" class="form-label">Nom Complet *</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'required':'required'}}) }}
        </div>

        <div class="form-group">
            <label for="{{ form.ville.vars.id }}" class="form-label">Ville * </label>
            {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'required':'required'}}) }}
        </div>

        {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'hidden':'hidden'}}) }}

        <div class="form-group">
            <label for="{{ form.email.vars.id }}" class="form-label">Email *</label>
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'required':'required'}}) }}
        </div>

        <button type="submit" class="submit-btn">{{ button_label|default('Enregistrer') }}</button>

        {{ form_end(form) }}
    </div>

    <!-- Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h2 class="modal-title mb-4" id="successModalLabel">Message envoyé</h2>
                    <p>Votre message a bien été envoyé. Nous reviendrons vers vous dans les plus brefs délais.</p>
                    <button type="button" class="btn btn-primary mt-4" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

    <style>
        .prospect-form-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
        }

        .form-title {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 0px;
            color: #555;
            font-size: 14px;
        }

        .form-control:focus {
            outline: none;
            border-color: #008080;
        }

        .submit-btn {
            width: 100%;
            padding: 12px;
            background-color: #008080;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .submit-btn:hover {
            background-color: #006666;
        }

        /* Styles pour le modal */
        .modal-content {
            background-color: #2c2c2c;
            color: #ffffff;
            border: none;
            border-radius: 10px;
        }

        .modal-title {
            font-size: 24px;
            font-weight: bold;
        }

        .modal-body {
            padding: 30px;
        }

        .btn-primary {
            background-color: #ffffff;
            color: #2c2c2c;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #e0e0e0;
            color: #2c2c2c;
        }

        .modal-dialog-centered::before {
            content: '';
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: -1;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.prospect-form');
            const successModal = new bootstrap.Modal(document.getElementById('successModal'));

            form.addEventListener('submit', function(event) {
                event.preventDefault();

                const formData = new FormData(form);

                fetch('{{ path('app_prospect_new') }}', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            successModal.show();
                            form.reset();
                        } else {
                            console.error('Erreur lors de la soumission du formulaire');
                        }
                    })
                    .catch(error => {
                        console.error('Erreur:', error);
                    });
            });
        });
    </script>
{% endblock %}