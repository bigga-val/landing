{% block stylesheets %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #008080;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .login-container {
            max-width: 500px;
            width: 90%;
            background-color: #ffffff;
            border-radius: 0px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            overflow: hidden;
            position: relative;
        }
        .login-header {
            background-color: #333;
            color: white;
            padding: 15px 20px;
            display: flex;
            align-items: center;
        }
        .login-header .icon {
            margin-right: 10px;
            font-size: 1.2em;
        }
        .login-header h4 {
            margin: 0;
            font-size: 1.2em;
        }
        .login-body {
            padding: 40px 20px 20px;
        }
        .logo {
            position: absolute;
            top: 30px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 10;
        }
        .logo img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background-color: white;
            padding: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
        .form-control {
            border-right: none;
        }
        .input-group-text {
            background-color: white;
            border-left: none;
        }
        .btn-connect {
            background-color: #333;
            color: white;
            border: none;
        }
        .btn-connect:hover {
            background-color: #555;
        }
        .forgot-password {
            color: #008080;
            text-decoration: none;
        }
        .forgot-password:hover {
            text-decoration: underline;
        }
        .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 1.5em;
            color: white;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-header">
            <i class="fas fa-sign-in-alt icon"></i>
            <h4>Connexion</h4>
            <span class="close-btn">&times;</span>
        </div>
        <div class="logo">
            <a href="{{ path('app_home') }}">
                <img src="{{ asset('images/Logo e-login.png') }}" alt="Logo" class="img-fluid">
            </a>
        </div>
        <div class="login-body mt-4">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="Identifiant Admin (ID)" required autofocus>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
                        <span class="input-group-text"><i class="fas fa-eye"></i></span>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a href="#" class="forgot-password">Mot de passe oubli√© ?</a>
                    <button type="submit" class="btn btn-connect">Se connecter</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}