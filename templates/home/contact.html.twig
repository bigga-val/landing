{% extends 'base.html.twig' %}

{% block title %}Contacter!{% endblock %}

{% block body %}

    <style>
        body {
            background: linear-gradient(to right, #f0f0f0 50%, white 50%);
            min-height: 100vh;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
        }

        .custom-container {
            width: 90%;
            max-width: 900px;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            margin: 50px;
        }
        .contact-info {
            background-color: #f0f0f0;
            padding: 2.5rem;
            height: 100%;
        }
        .form-section {
            padding: 2.5rem;
        }
        .contact-icon {
            color: #008080;
            font-size: 1rem;
            margin-right: 10px;
        }
        .form-control {
            border-radius: 0;
            border: 1px solid #ccc;
        }
        .btn-custom {
            background-color: #f0f0f0;
            color: #000;
            border: none;
            border-radius: 0;
            padding: 10px 0;
        }
        h2, h3 {
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }
        .contact-item {
            margin-bottom: 1.2rem;
        }
        .contact-item h5 {
            font-size: 1rem;
        }
        .contact-item p {
            font-size: 0.9rem;
            margin-bottom: 0;
        }
        .navbar-brand img {
            height: 30px;
            margin-right: 10px;
        }
        .social-icon {
            font-size: 24px;
            color: #000000;
            margin-right: 15px;
        }
        .whatsapp-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }

        .whatsapp-button {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 60px;
            height: 60px;
            background-color: #25D366;
            color: white;
            border-radius: 50%;
            text-decoration: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .whatsapp-button:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

        .whatsapp-icon {
            font-size: 30px;
        }

        .pulse {
            animation: pulse-animation 2s infinite;
        }

        @keyframes pulse-animation {
            0% {
                box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.7);
            }
            70% {
                box-shadow: 0 0 0 15px rgba(37, 211, 102, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(37, 211, 102, 0);
            }
        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .logo {
            max-width: 80px;
            height: 80px;
            display: block;
            margin: 0.4rem auto;
            object-fit: cover;
        }

        .rounded-logo {
            border-radius: 50%;
            overflow: hidden;
            background-color: white;
        }
        @media (max-width: 767px) {
            .custom-container {
                width: 100%;
                border-radius: 0;
            }
        }
        .modal-content {
            background-color: #2c2c2c;
            color: #ffffff;
            border: none;
            border-radius: 10px;
        }

        .modal-title {
            font-size: 24px;
            font-weight: bold;
        }

        .modal-body {
            padding: 30px;
        }

        .btn-primary {
            background-color: #ffffff;
            color: #2c2c2c;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #e0e0e0;
            color: #2c2c2c;
        }

    </style>
    <div class="main-content">
        <img src="{{ asset('images/Logo e-login.png') }}" alt="ETAH Logo" class="logo mt-4 rounded-logo">
        <div class="custom-container">
            <div class="row g-0">
                <div class="col-12 col-md-7 order-md-2">
                    <div class="form-section">
                        <h3>Envoyez un message</h3>
                        <form id="contactForm">
                            <input type="hidden" name="token" value="{{ csrf_token('token-value') }}">
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Entrez votre Nom" name="nom" required>
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Entrez votre Adresse mail" name="email" required>
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" rows="4" placeholder="Entrez votre message" name="message" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-custom w-100">Envoyer</button>
                        </form>
                    </div>
                </div>
                <div class="col-12 col-md-5 order-md-1">
                    <div class="contact-info">
                        <h1>Nous joindre</h1>
                        <div class="contact-item">
                            <h5><span class="contact-icon">⬤</span><strong>Adresse </strong> </h5>
                            <p>78 avenue Tanganyika<br>(Boulevard Lumumba)<br>Ville de Kalemie, province du<br>Tanganyika</p>
                        </div>
                        <div class="contact-item">
                            <h5><span class="contact-icon">⬤</span><strong>Contacts</strong> </h5>
                            <p>+243 820 838 387<br>+243 992 385 873</p>
                        </div>
                        <div class="contact-item">
                            <h5><span class="contact-icon">⬤</span> <strong>Adresse mail</strong> </h5>
                            <p>contact@pyramidedigitals.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h2 class="modal-title mb-4" id="successModalLabel">Message envoyé</h2>
                    <p>Votre message a bien été envoyé. Nous reviendrons vers vous dans les plus brefs délais.</p>
                    <button type="button" class="btn btn-primary mt-4" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('contactForm');
            const successModal = new bootstrap.Modal(document.getElementById('successModal'));

            form.addEventListener('submit', function(event) {
                event.preventDefault();

                const formData = new FormData(form);

                fetch('{{ path('app_contact') }}', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.text())
                    .then(html => {
                        successModal.show();
                        form.reset();
                    })
                    .catch(error => {
                        console.error('Erreur:', error);
                    });
            });

            document.getElementById('successModal').addEventListener('hidden.bs.modal', function () {
                document.body.classList.remove('modal-open');
                document.querySelector('.modal-backdrop').remove();
            });
        });
    </script>
{% endblock %}