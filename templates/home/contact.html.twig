{% extends 'base.html.twig' %}

{% block title %}Contacter!{% endblock %}

{% block body %}

    <style>
        body {
            background: linear-gradient(to right, #f0f0f0 50%, white 50%);
            min-height: 100vh;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
        }
        
        .custom-container {
            width: 90%;
            max-width: 900px;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            margin: 50px;
        }
        .contact-info {
            background-color: #f0f0f0;
            padding: 2.5rem;
            height: 100%;
        }
        .form-section {
            padding: 2.5rem;
        }
        .contact-icon {
            color: #008080;
            font-size: 1rem;
            margin-right: 10px;
        }
        .form-control {
            border-radius: 0;
            border: 1px solid #ccc;
        }
        .btn-custom {
            background-color: #f0f0f0;
            color: #000;
            border: none;
            border-radius: 0;
            padding: 10px 0;
        }
        h2, h3 {
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }
        .contact-item {
            margin-bottom: 1.2rem;
        }
        .contact-item h5 {
            font-size: 1rem;
        }
        .contact-item p {
            font-size: 0.9rem;
            margin-bottom: 0;
        }
        .navbar-brand img {
            height: 30px;
            margin-right: 10px;
        }
        .social-icon {
            font-size: 24px;
            color: #000000;
            margin-right: 15px;
        }
        .whatsapp-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }

        .whatsapp-button {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 60px;
            height: 60px;
            background-color: #25D366;
            color: white;
            border-radius: 50%;
            text-decoration: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .whatsapp-button:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

        .whatsapp-icon {
            font-size: 30px;
        }

        .pulse {
            animation: pulse-animation 2s infinite;
        }

        @keyframes pulse-animation {
            0% {
                box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.7);
            }
            70% {
                box-shadow: 0 0 0 15px rgba(37, 211, 102, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(37, 211, 102, 0);
            }
        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .logo {
            max-width: 100px;
            height: auto;
            display: block;
            margin: 1rem auto;
        }
        @media (max-width: 767px) {
            .custom-container {
                width: 100%;
                border-radius: 0;
            }
        }
    </style>

  <div class="main-content">
        <img src="{{ asset("images/logo-e.png") }}" alt="ETAH Logo" class="logo mt-5">
        <div class="custom-container">
            <div class="row g-0">
                <div class="col-12 col-md-7 order-md-2">
                    <div class="form-section">
                        <h3>Envoyez un message</h3>

                        
                        <form>
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Entrez votre Nom">
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Entrez votre Adresse mail">
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" rows="4" placeholder="Entrez votre message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-custom w-100">Envoyer</button>
                        </form>
                    </div>
                </div>
                <div class="col-12 col-md-5 order-md-1">
                    <div class="contact-info">
                        <h1>Nous joindre</h1>
                        <div class="contact-item">
                            <h5><span class="contact-icon">⬤</span><strong>Adresse </strong> </h5>
                            <p>78 avenue Tanganyika<br>(Boulevard Lumumba)<br>Ville de Kalemie, province du<br>Tanganyika</p>
                        </div>
                        <div class="contact-item">
                            <h5><span class="contact-icon">⬤</span><strong>Contacts</strong> </h5>
                            <p>+243 820 838 387<br>+243 992 385 873</p>
                        </div>
                        <div class="contact-item">
                            <h5><span class="contact-icon">⬤</span> <strong>Adresse mail</strong> </h5>
                            <p>contact@pyramidedigitals.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}